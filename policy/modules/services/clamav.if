	domtrans_pattern($1, clamsmtpd_exec_t, clamsmtpd_t)
	corecmd_search_bin($1)
')

########################################
## <summary>
##	Execute clamsmtpd server in the clamsmtpd domain.
## </summary>
## <param name="domain">
